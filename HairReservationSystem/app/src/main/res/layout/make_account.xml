                                    <Button
                                        android:id="@+id/completeHairDresser"
                                        android:layout_width="350dp"
                                        android:layout_height="wrap_content"
                                        android:text="가    입     완    료"
                                        android:textSize="35dp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
